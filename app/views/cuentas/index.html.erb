<p id="notice"><%= notice %></p>

<h1>Cuentas</h1>

<table>
  <thead>
    <tr>
      <th>Direccion</th>
      <th>Saldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuentas.each do |cuenta| %>
      <tr>
        <td><%= cuenta.direccion %></td>
        <td><%= cuenta.saldo %></td>
        <td><%= link_to 'Show', cuenta %></td>
        <td><%= link_to 'Edit', edit_cuenta_path(cuenta) %></td>
        <td><%= link_to 'Destroy', cuenta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

